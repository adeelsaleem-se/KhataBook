<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameT"
        android:layout_width="146dp"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailT"
        android:layout_width="190dp"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="abc@gmail.com"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameT" />

    <TextView
        android:id="@+id/amountT"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Rs. 0"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/approvedT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeT"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/paidT"
        app:layout_constraintTop_toBottomOf="@+id/amountT" />

    <CheckBox
        android:id="@+id/approvedT"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        android:text="Approve"
        app:layout_constraintStart_toEndOf="@+id/nameT"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/paidT"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:text="Paid"
        app:layout_constraintStart_toEndOf="@+id/emailT"
        app:layout_constraintTop_toBottomOf="@+id/approvedT" />
</androidx.constraintlayout.widget.ConstraintLayout>